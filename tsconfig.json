{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "types": ["node", "jest"]
  },

  "exclude": ["dist", "node_modules"],
  "include": ["src/**/*", "jest.config.js"]
}
